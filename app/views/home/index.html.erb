<div class="container mt-5">
  <h1 class="text-center mb-4"> My Family Deck</h1>

  <% if user_signed_in? %>
    <div class="text-center mb-4">
      <p>Bienvenue <%= current_user.email %> !</p>
      <%= link_to "Voir mes enfants", children_path, class: "btn btn-primary me-3" %>
      <%= link_to "Déconnexion", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-secondary" %>
    </div>
  <% else %>
    <div class="text-center">
      <p>Suivez et organisez les éléments importants de votre tribu.</p>
      <%= link_to "S'inscrire", new_user_registration_path, class: "btn btn-success me-3" %>
      <%= link_to "Se connecter", new_user_session_path, class: "btn btn-outline-primary" %>
    </div>
  <% end %>
</div>
